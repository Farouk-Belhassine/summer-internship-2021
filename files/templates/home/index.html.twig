{% block javascript %}
<script>
//success chart start
var ctx = document.getElementById('success');
var data = {
	labels: {{ stepslist|raw }},
	datasets: [{
    label: '',
		data: {{ total_ok|raw }},
		backgroundColor: {{ colorlist|raw }}
	}]
};
var canvasDoughnut = new Chart(ctx, {
	type: 'bar',
	tooltipFillColor: "rgba(51, 51, 51, 0.55)",
	data: data,
  options: {
        scales: {
            y: {
                ticks: {
                    // Include a dollar sign in the ticks
                    callback: function(value, index, values) {
                        return '%' + value;
                    }
                }
            }
        }
    }
});
//success chart end

//failure chart start
var ctx = document.getElementById('failure');
var data = {
	labels: {{ stepslist|raw }},
	datasets: [{
    label: '',
		data: {{ total_nok|raw }},
		backgroundColor: {{ colorlist|raw }}
	}]
};
var canvasDoughnut = new Chart(ctx, {
	type: 'bar',
  options: { legend: { display: false }},
	data: data,
  options: {
        scales: {
            y: {
                ticks: {
                    // Include a dollar sign in the ticks
                    callback: function(value, index, values) {
                        return '%' + value;
                    }
                }
            }
        }
    }
});
//failure chart end
</script>
{% endblock %}