                  <div class="x_content">
                    <div class="chart-container">
                      {% if Onlyprods != null %}
                      <canvas id="success"></canvas>
                      {% else %}
                      <h1>No data to show</h1>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Graph<small>Step failure rate</small></h2>
                      <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a></li>
                      </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <div class="chart-container">
                      {% if Onlyprods != null %}
                      <canvas id="failure"></canvas>
                      {% else %}
                      <h1>No data to show</h1>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  {% for product in Onlyprods %}
                    <table class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                      <thead>
                        <tr>
                          <th>Product ID</th>
                          <th style="width: 50%;">{{ product.prodId }}<i><a class="fa fa-bar-chart-o pull-right btn btn-success" href="{{ path('home_showproductstats', {'prodId': product.prodId}) }}"> Show product stats</a></i></th>
                          <th>Total OK</th>
                          <th>Total NOK</th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for prodhistory in Products %}
                          {% if prodhistory.prodId == product.prodId %}
                            <tr>
                              <td><b>Step ID</b></td>
                              <td>{{ prodhistory.stepid }}</td>
                              <td>{{ prodhistory.total_ok }}</td>
                              <td>{{ prodhistory.total_nok }}</td>
                            </tr>
                          {% endif %}
                          {% else %}
                            <tr>
                              <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                      </tbody>
                    </table>
                  {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        {% include 'footercontent.html.twig' %}
