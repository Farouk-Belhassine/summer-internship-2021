{% block javascript %}
<script>
var password = document.getElementById("{{form.password.vars.id}}")
  , confirm_password = document.getElementById("confirm_password");

function validatePassword(){
  if(password.value != confirm_password.value) {
    confirm_password.setCustomValidity("Passwords Don't Match");
  }else if(password.value.length < 6) {
    password.setCustomValidity("Your password must be at least 6 characters long");
  }else if(password.value.length > 40) {
    password.setCustomValidity("Your password cannot be longer than 40 characters");
  }
  else {
    confirm_password.setCustomValidity('');
  }
}

password.onchange = validatePassword;
confirm_password.onkeyup = validatePassword;
</script>
