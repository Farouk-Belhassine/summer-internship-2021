{% extends 'base.html.twig' %}

{% block title %}ProdHistory{% endblock %}

{% block body %}
    <h1>ProdHistory</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ prod_history.id }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{{ prod_history.timestamp ? prod_history.timestamp|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ProdId</th>
                <td>{{ prod_history.prodId }}</td>
            </tr>
            <tr>
                <th>ProdSerial</th>
                <td>{{ prod_history.prodSerial }}</td>
            </tr>
            <tr>
                <th>Stepid</th>
                <td>{{ prod_history.stepid }}</td>
            </tr>
            <tr>
                <th>Operatorid</th>
                <td>{{ prod_history.operatorid }}</td>
            </tr>
            <tr>
                <th>Stepcomments</th>
                <td>{{ prod_history.stepcomments }}</td>
            </tr>
            <tr>
                <th>Stepstatus</th>
                <td>{{ prod_history.stepstatus ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('prod_history_index') }}">back to list</a>

    <a href="{{ path('prod_history_edit', {'id': prod_history.id}) }}">edit</a>

    {{ include('prod_history/_delete_form.html.twig') }}
